<% layout("/layouts/boilerplate.ejs") %> 
<body>
    <style>
        #filters{
            display:flex;
            flex-wrap:wrap;
            align-items:center;
            margin-left: 1rem;
        }
        .filter{
            text-align:center;
            margin-right:1.5rem;
            margin-top:2rem;
            opacity:0.7;
        }
        .filter:hover{
            opacity:1;
            cursor:pointer;
        }
        .filter p{
            font-size:0.8rem;

        }
        .tax-info{
            display:none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius:1rem;
            height:3.5rem;
            padding:1rem;
            margin-left: 2rem;
            display:flex;
            align-items:center;
        }
    </style>

    <div id="filters">
        <div class="filter">
            <a href="/listings?hotelType=Trending">
                <div class="icon"><i class="fa-solid fa-fire"></i></div>
                <p class="icon">Trending</p>
            </a>
        </div>
        <div class="filter" >
            <a href="/listings?hotelType=Rooms" >
                <div class="icon"><i class="fa-solid fa-bed"></i></div>
                <p class="icon">Rooms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?hotelType=Iconic Cities">
                <div class="icon"><i class="fa-solid fa-mountain-city"></i></div>
                <p class="icon">Iconic Cities</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?hotelType=Mountains">
                <div class="icon"><i class="fa-solid fa-mountain"></i></div>
                <p class="icon">Mountains</p>
            </a>

        </div>
        <div class="filter" >
            <a href="/listings?hotelType=Castles">
                <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
                <p class="icon">Castles</p>
            </a>

        </div>
        <div class="filter">
            <a href="/listings?hotelType=Pools">
                <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
                <p class="icon">Amazing Pools</p>
            </a>

        </div>
        <div class="filter">
            <a href="/listings?hotelType=Camping">
                <div class="icon"><i class="fa-solid fa-campground"></i></div>
                <p class="icon">Camping</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?hotelType=Farms">
                <div class="icon"><i class="fa-solid fa-tractor"></i></div>
                <p class="icon">Farms</p>
            </a>
        </div>
        <div class="filter">
            <a  href="/listings?hotelType=Arctic">
                <div class="icon"><i class="fa-solid fa-snowflake"></i></div>
                <p class="icon">Arctic</p>
            </a>            
        </div >
        <div class="filter">
            <a href="/listings?hotelType=Domes">
                <div class="icon"><i class="fa-solid fa-landmark-dome"></i></div>
                <p class="icon">Domes</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings?hotelType=Boats">
                <div class="icon"><i class="fa-solid fa-ship"></i></div>
                <p class="icon">Boats</p>
            </a>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
              </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 mt-3 row-cols-sm-1">
        <% for(let listing of alllistings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="listing-card card col"> 
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                    <b><%= listing.title %></b> 
                    <p class="price" data-price="<%=listing.price%>">&#8377; <%= listing.price.toLocaleString("en-IN") %> /night</p>
                    </p>
                </div>
            </div>
            </a>
        <% } %>
    </div>

</body>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", ()=>{
        let taxPrice = document.querySelectorAll(".price");
        taxPrice.forEach((price)=>{
            let basePrice = price.dataset.price;
            if(taxSwitch.checked){
                let totalPrice = Math.round(basePrice * 1.18);
                price.innerHTML = `&#8377; ${totalPrice.toLocaleString("en-IN")} /night`;
            }else{
                price.innerHTML = `&#8377; ${parseInt(basePrice).toLocaleString("en-IN")} /night`;
            }
        })
});
</script>

 